<steps:StepPage x:Class="Microsoft.Templates.Wizard.Steps.FrameworkTypeStep.FrameworkTypeStepPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:steps="clr-namespace:Microsoft.Templates.Wizard.Steps"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="FrameworkTypeStepPagePage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Microsoft.Templates.Wizard;component/Styles/WizardTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListView ItemsSource="{Binding FrameworkTypes}" SelectedItem="{Binding SelectedFrameworkType, Mode=TwoWay}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="100" Height="100">
                        <TextBlock Text="{Binding FrameworkType}" Style="{StaticResource TemplateTitleStyle}" VerticalAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel DataContext="{Binding SelectedFrameworkType}" Grid.Column="1" Style="{StaticResource TemplateInfoContainerStyle}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name:" Style="{StaticResource TemplateInfoPropertyNameStyle}"/>
                <TextBlock Text="{Binding FrameworkType}" Style="{StaticResource TemplateInfoPropertyValueStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</steps:StepPage>
