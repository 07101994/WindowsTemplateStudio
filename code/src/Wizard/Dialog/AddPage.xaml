<Window x:Class="Microsoft.Templates.Wizard.Dialog.AddPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Microsoft.Templates.Wizard.Dialog"
             Width="432.028" 
             Height="500"
             Title="UWP Community Templates"
             WindowStartupLocation="CenterScreen" 
             ResizeMode="NoResize" 
             ShowInTaskbar="False"
            x:Name="_this" >
    <Grid>
        <Image Source="pack://application:,,,/Microsoft.Templates.Wizard;component/Resources/Solution.png" 
                   Width="15" 
                   Height="15" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left"
                   Margin="30,10,0,0"/>

        <TextBlock x:Name="SolutionNameTbx" 
                       HorizontalAlignment="Stretch" 
                       VerticalAlignment="Top"
                       Margin="50,10,10,0" 
                       Text="SolutionName"/>

        <Canvas x:Name="Pages"  
                HorizontalAlignment="Stretch">

            <TextBlock Text="Select the Page type:" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Left"
                       Margin="30,40,15,0" FontSize="14" FontWeight="Bold" />

            <ItemsControl Name="PageOptions"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" 
                       Margin="15,60,15,40">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton GroupName="PageTypes"  Margin="10,10" Content="{Binding Item.Name}" Command="{Binding Command}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="Page Name:" Canvas.Left="16" Canvas.Top="390" RenderTransformOrigin="0.945,0.34"/>
            <TextBox x:Name="PageName" DataContext="{Binding ElementName=_this}" Text="{Binding PageNameProp}"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="161" Canvas.Left="83" Canvas.Top="390" TextChanged="PageName_TextChanged"/>
            <TextBox x:Name="Namespace" DataContext="{Binding ElementName=_this}" Text="{Binding NamespaceProp}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="161" Canvas.Left="83" Canvas.Top="366" TextChanged="DefaultNamespace_TextChanged"/>
            <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="Namespace:" Canvas.Left="15" Canvas.Top="366" RenderTransformOrigin="0.945,0.34"/>
        </Canvas>

        <Button x:Name="CancelBtn" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Width="75" 
                Content="Cancel" 
                Margin="0,0,10,10" 
                Click="CancelBtn_Click"/>


        <Button x:Name="NextBtn" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Content="Ok"
                IsEnabled="{Binding IsOkEnabled}"
                DataContext="{Binding ElementName=_this}"
                Width="75" 
                Margin="0,0,90,10" 
                Click="OkBtn_Click"/>

    </Grid>
</Window>



    
    