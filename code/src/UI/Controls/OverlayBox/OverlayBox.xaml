<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Microsoft.Templates.UI.Controls"
                    xmlns:res="clr-namespace:Microsoft.Templates.UI.Resources"
                    xmlns:converters="clr-namespace:Microsoft.Templates.UI.Converters">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Microsoft.Templates.UI;component/Styles/UIStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

    <Style TargetType="{x:Type controls:OverlayBox}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:OverlayBox}">
                    <Grid Width="300" Height="270">
                        <Polygon
                            Fill="White"                            
                            Points="0,8 20,8 10,0"
                            Margin="0,0,5,1"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"/>
                            <!--
                            Stroke="Black"
                            StrokeThickness="1"
                            -->                        
                        <Border Grid.Row="1" BorderThickness="1,0,1,1" BorderBrush="{StaticResource UIBlack}" Background="{StaticResource UIWhite}" Margin="0,8,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="{StaticResource UIBlackColor}" Opacity="0.4"/>
                            </Border.Effect>
                            <StackPanel Grid.Row="1" Margin="{StaticResource MediumMargin}">
                                <TextBlock Text="{x:Static res:StringRes.Title}" Style="{StaticResource TextOverlayBoxTitleStyle}"/>
                                <TextBlock Text="{x:Static res:StringRes.WTSDescription}" Style="{StaticResource TextOverlayBoxDescriptionStyle}" Margin="{StaticResource SmallTopMargin}"/>
                                <Grid Margin="{StaticResource SmallTopMargin}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static res:StringRes.WizardVersion}" Style="{StaticResource TextOverlayBoxDescriptionStyle}" Margin="{StaticResource MediumRightMargin}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{TemplateBinding WizardVersion}" Style="{StaticResource TextOverlayBoxDescriptionStyle}" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static res:StringRes.TemplatesVersion}" Style="{StaticResource TextOverlayBoxDescriptionStyle}" Margin="{StaticResource MediumRightMargin}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{TemplateBinding TemplatesVersion}" Style="{StaticResource TextOverlayBoxDescriptionStyle}" />
                                </Grid>
                                <StackPanel Margin="{StaticResource SmallTopMargin}" Visibility="{TemplateBinding NewUpdateAvailable, Converter={StaticResource BoolToVisibilityConverter}}" >
                                    <TextBlock Grid.Row="0" Text="{x:Static res:StringRes.NewUpdateAvailable}" Style="{StaticResource TextOverlayBoxNotificationStyle}" />
                                    <Button Grid.Row="1" Style="{StaticResource ButtonRefreshTemplatesStyle}" Content="{x:Static res:StringRes.ButtonRefreshTemplates}" Margin="{StaticResource SmallTopMargin}" />
                                </StackPanel>
                                <Button Grid.Row="1" Style="{StaticResource ButtonRefreshTemplatesStyle}" Content="{x:Static res:StringRes.CheckForUpdates}" Margin="{StaticResource SmallTopMargin}" Visibility="{TemplateBinding NewUpdateAvailable, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=reverse}" />
                                <TextBlock Margin="{StaticResource SmallTopMargin}">
                                    <Hyperlink Command="{TemplateBinding OpenUrlCommand}" CommandParameter="https://github.com/Microsoft/WindowsTemplateStudio" Style="{StaticResource LicenseHyperlinkStyle}">
                                        <TextBlock Text="{x:Static res:StringRes.VisitProjectWebSite}" Style="{StaticResource TextSumaryLicenseStyle}" />
                                    </Hyperlink>
                                </TextBlock>
                                <TextBlock Margin="{StaticResource SmallTopMargin}">
                                    <Hyperlink Command="{TemplateBinding OpenUrlCommand}" CommandParameter="https://github.com/Microsoft/WindowsTemplateStudio/blob/master/LICENSE.md" Style="{StaticResource LicenseHyperlinkStyle}">
                                        <TextBlock Text="{x:Static res:StringRes.PrivacyTermns}" Style="{StaticResource TextSumaryLicenseStyle}" />
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <!--<Grid Grid.RowSpan="2" Height="5" Width="14" Background="White" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,9,0"/>
                        <Grid Grid.RowSpan="2" Height="5" Width="16" Background="White" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,8,0"/>
                        <Grid Grid.RowSpan="2" Height="5" Width="18" Background="White" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,9,7,0"/>-->
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>