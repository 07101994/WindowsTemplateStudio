<Window x:Class="Microsoft.Templates.UI.Views.NewItem.ProjectConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Microsoft.Templates.UI.Controls"    
        mc:Ignorable="d"
        Title="ProjectConfigurationWindow" Height="325" Width="450">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Microsoft.Templates.UI;component/Styles/UIStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="MetadataDisplayNameTemplate">
                <TextBlock Text="{Binding DisplayName}"/>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Style="{StaticResource GridTitleStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <controls:LogoDisplay
                    Grid.Column="0"
                    Width="40"
                    Margin="{StaticResource Margin_M_Left}"
                    HorizontalAlignment="Left" />
            <TextBlock
                    Grid.Column="1"
                    Margin="{StaticResource Margin_M_Left}"
                    VerticalAlignment="Center"
                    Style="{StaticResource TextTitleStyle}"
                    Text="Project configuration" />
        </Grid>
        <StackPanel Margin="{StaticResource Margin_M_All}" Grid.Row="1">
            <TextBlock Text="We are unable to find the project configuration metadata in the Package.appxmanifest file. Can you please provide the project configuration you selected when the project was created?." FontSize="{StaticResource UI_S_FontSize}"  Margin="{StaticResource Margin_S_Top}"/>
            <TextBlock Text="Select project type" FontSize="{StaticResource UI_S_FontSize}"/>
            <ComboBox ItemsSource="{Binding ProjectTypes}" SelectedItem="{Binding SelectedProjectType, Mode=TwoWay}" Margin="{StaticResource Margin_S_Top}" ItemTemplate="{StaticResource MetadataDisplayNameTemplate}"/>
            <TextBlock Text="{Binding SelectedProjectType.Summary}" Margin="{StaticResource Margin_S_Top}"/>

            <TextBlock Text="Select framework type" FontSize="{StaticResource UI_S_FontSize}" Margin="{StaticResource Margin_M_Top}"/>
            <ComboBox Text="Framework:" ItemsSource="{Binding Frameworks}" SelectedItem="{Binding SelectedFramework, Mode=TwoWay}" Margin="{StaticResource Margin_S_Top}" ItemTemplate="{StaticResource MetadataDisplayNameTemplate}"/>
            <TextBlock Text="{Binding SelectedFramework.Summary}" Margin="{StaticResource Margin_S_Top}"/>
        </StackPanel>
        <Grid Grid.Row="2" Style="{StaticResource GridBottomBarStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button
                    Grid.Column="1"
                    Command="{Binding OkCommand}"
                    Content="Ok"
                    Style="{StaticResource ButtonNavigationStyle}" />
                <Button
                    Grid.Column="1"
                    Margin="{StaticResource Margin_M_LeftRight}"
                    Command="{Binding CancelCommand}"
                    Content="Cancel"
                    Style="{StaticResource ButtonNavigationStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
