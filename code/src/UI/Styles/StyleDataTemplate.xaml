<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Microsoft.Templates.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Microsoft.Templates.UI;component/Styles/_Colors.xaml" />
        <ResourceDictionary Source="/Microsoft.Templates.UI;component/Styles/_Thickness.xaml" />
        <ResourceDictionary Source="/Microsoft.Templates.UI;component/Styles/StyleTextBlock.xaml" />
        <ResourceDictionary Source="/Microsoft.Templates.UI;component/Styles/StyleButton.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="ProjectSetupItemTemplate">
        <Border Width="436" Height="84" Background="{StaticResource UIWhite}">
            <Grid Margin="{StaticResource MediumMargin}">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--Row 0-->
                <controls:ImageEx Grid.Row="0" Grid.RowSpan="3" Focusable="False" SourcePath="{Binding Icon}"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource TextTemplateTitleStyle}" Text="{Binding DisplayName}" Margin="{StaticResource MediumLeftMargin}" />
                <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource InfoTemplateInfoButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button.Content>
                        <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="18" />
                    </Button.Content>
                </Button>

                <!--Row 1-->
                <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource TextTemplateSubtitleStyle}" Text="{Binding Description}" Margin="{StaticResource MediumLeftMargin}"/>
                
                <!--Row 2-->
                <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource TextTemplateAuthorStyle}" Margin="{StaticResource MediumLeftMargin}">1.0.0.0 - by Microsoft</TextBlock>
            </Grid>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="ProjectTemplatesItemTemplate">
        <controls:TemplateInfoControl
                    TemplateInfo="{Binding}"
                    AddCommand="{Binding DataContext.AddCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                    GetUsedNames="{Binding DataContext.GetUsedNamesFunc, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                    GetUsedTemplatesIdentities="{Binding DataContext.GetUsedTemplatesIdentitiesFunc, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"/>
    </DataTemplate>

    <DataTemplate x:Key="ProjectTemplatesSummaryItemTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding DisplayText}" Style="{StaticResource TextTemplateSubtitleStyle}"/>
            <TextBlock Grid.Row="1" Style="{StaticResource TextTemplateAuthorStyle}">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Made by {0}">
                        <Binding Path="Author" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <!--<Button Grid.Column="1" Grid.Row="1" Content="X" IsEnabled="{Binding IsEnabled}" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.ProjectTemplates.RemoveItemCommand}" CommandParameter="{Binding}" />-->
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource InfoTemplateInfoButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Center" IsEnabled="{Binding IsRemoveEnabled}" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.ProjectTemplates.RemoveItemCommand}" CommandParameter="{Binding}" >
                <Button.Content>
                    <Grid>
                        <TextBlock Text="&#xECCA;" FontFamily="Segoe MDL2 Assets" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
                        <TextBlock Text="&#xE894;" FontFamily="Segoe MDL2 Assets" FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" />
                    </Grid>
                </Button.Content>
            </Button>
        </Grid>
    </DataTemplate>
</ResourceDictionary>