<Page
    x:Class="SplitViewTemplate.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="using:SplitViewTemplate.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding Shell, Source={StaticResource Locator}}">
    <Page.Resources>
        <DataTemplate x:Key="HamburgerButtonTemplate" x:DataType="model:ShellNavigationItem">
            <Grid Width="240" Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    Margin="12"
                    Source="{x:Bind Icon}"
                    Stretch="Uniform"
                    Visibility="{Binding IconVisibility}" />
                <FontIcon
                    Grid.Column="0"
                    Margin="12"
                    Glyph="{x:Bind Glyph}"                    
                    FontFamily="Segoe MDL2 Assets"
                    Foreground="{StaticResource ApplicationPageBackgroundThemeBrush}" />
                <TextBlock
                    Grid.Column="1"                    
                    Text="{x:Bind Name}"
                    FontSize="16"
                    Foreground="{StaticResource ApplicationPageBackgroundThemeBrush}"
                    VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{StaticResource CustomWhite}">
        <SplitView
            DisplayMode="CompactInline"
            PaneBackground="{StaticResource CustomGray}"
            IsPaneOpen="{Binding IsPaneOpen, Mode=TwoWay}">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Button
                        Grid.Row="0"
                        Width="48"
                        Height="48"
                        Command="{Binding OpenPaneCommand}"
                        Background="Transparent">
                        <FontIcon                        
                            FontFamily="Segoe MDL2 Assets"
                            Glyph="&#xE700;"
                            Foreground="{StaticResource CustomWhite}"/>
                    </Button>

                    <ListView
                        Grid.Row="1"    
                        IsItemClickEnabled="True"                        
                        ItemTemplate="{StaticResource HamburgerButtonTemplate}"
                        ItemsSource="{Binding NavigationItems}"
                        SelectionMode="Single"
                        TabIndex="1"
                        ItemClick="OnItemClick"
                        Loaded="OnNavigationItemsLoaded">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </SplitView.Pane>
            <Frame x:Name="frame"/>
        </SplitView>
    </Grid>
</Page>
