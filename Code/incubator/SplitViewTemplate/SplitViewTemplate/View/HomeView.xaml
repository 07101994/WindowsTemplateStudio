<Page
    x:Class="SplitViewTemplate.View.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource CustomWhite}">
        <ScrollViewer>
            <StackPanel Margin="24,12">
                <TextBlock x:Uid="HomeTitle" Style="{StaticResource CustomHeaderStyle}" />
                <TextBlock x:Uid="HomeSubTitle" Style="{StaticResource CustomSubHeaderStyle}" />

                <TextBlock x:Uid="HomeSection1" Style="{StaticResource CustomTitleStyle}" Margin="0,16,0,0" />
                <TextBlock x:Uid="HomeSection11" Style="{StaticResource CustomSubTitleStyle}" Margin="0,8,0,0" />
                <TextBlock x:Uid="HomeText11" Style="{StaticResource CustomBodyStyle}" />
                <TextBlock x:Uid="HomeSection12" Style="{StaticResource CustomSubTitleStyle}" Margin="0,8,0,0" />
                <TextBlock x:Uid="HomeText12" Style="{StaticResource CustomBodyStyle}" />
                <TextBlock x:Uid="HomeSection13" Style="{StaticResource CustomSubTitleStyle}" Margin="0,8,0,0" />
                <TextBlock x:Uid="HomeText13" Style="{StaticResource CustomBodyStyle}" />
                <TextBlock x:Uid="HomeSection14" Style="{StaticResource CustomSubTitleStyle}" Margin="0,8,0,0" />
                <TextBlock x:Uid="HomeText14" Style="{StaticResource CustomBodyStyle}" />

                <TextBlock x:Uid="HomeSection2" Style="{StaticResource CustomTitleStyle}" Margin="0,16,0,0" />
                <TextBlock x:Uid="HomeSection21" Style="{StaticResource CustomSubTitleStyle}" Margin="0,8,0,0" />
                <TextBlock x:Uid="HomeText21" Style="{StaticResource CustomBodyStyle}" />
                <Image Source="ms-appx:///Assets/Images/Octocat.png" Stretch="Uniform" Margin="0,8,0,0" MaxWidth="300" HorizontalAlignment="Left"/>
                <TextBlock x:Uid="HomeImageText1" Style="{StaticResource CustomBodyStyle}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
