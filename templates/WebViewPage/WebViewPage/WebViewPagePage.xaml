<Page
    x:Class="Param_PageNS.WebViewPage.WebViewPagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
<!--#if(isMVVMLight)-->
    DataContext="{Binding WebViewPageViewModel, Source={StaticResource Locator}}"
<!--#endif-->
    mc:Ignorable="d">

  <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <WebView
            Source="{Binding Source}"
            NavigationCompleted="OnNavigationCompleted"
            NavigationStarting="OnNavigationStarting" />
        <ProgressRing
            Width="100"
            Height="100"
            IsActive="True"
            Visibility="{Binding LoadingIndicatorVisibility}" />
    </Grid>
</Page>