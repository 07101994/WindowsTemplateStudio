<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="_Thickness.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="controls:ImageEx" x:Key="DefaultImageExStyle">
        <Setter Property="PlaceholderSource" Value="ms-appx:///Assets/PlaceholderImage.png" />
        <Setter Property="PlaceholderStretch" Value="Uniform" />
    </Style>

    <Style TargetType="controls:ImageEx" x:Key="ThumbnailImageExStyle" BasedOn="{StaticResource DefaultImageExStyle}">
        <Setter Property="Margin" Value="{StaticResource SmallAllMargin}"/>
        <Setter Property="Width" Value="100" />
        <Setter Property="Height" Value="100" />
    </Style>
</ResourceDictionary>
