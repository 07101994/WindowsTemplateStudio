<Page
    x:Class="uct.SplitViewProject.View.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:uct.SplitViewProject.Model"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="SplitViewItemTemplate" x:DataType="model:ShellNavigationItem">
            <Grid Width="240" Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <FontIcon
                    Grid.Column="0"
                    Margin="12"
                    Glyph="{x:Bind SymbolAsChar}"                    
                    FontFamily="Segoe MDL2 Assets"
                    Foreground="{ThemeResource SystemBaseHighColor}" />
                <TextBlock
                    Grid.Column="1"                    
                    Text="{x:Bind Name}"
                    FontSize="16"
                    Foreground="{ThemeResource SystemBaseHighColor}"
                    VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView
            DisplayMode="CompactInline"
            PaneBackground="{ThemeResource SystemBaseLowColor}"
            IsPaneOpen="{x:Bind ViewModel.IsPaneOpen, Mode=TwoWay}">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Button
                        Grid.Row="0"
                        Width="48"
                        Height="48"
                        Foreground="{ThemeResource SystemBaseHighColor}"
                        Command="{x:Bind ViewModel.OpenPaneCommand}"
                        Background="Transparent">
                        <FontIcon                        
                            FontFamily="Segoe MDL2 Assets"
                            Glyph="&#xE700;"/>
                    </Button>

                    <ListView
                        Grid.Row="1"    
                        IsItemClickEnabled="True"                        
                        ItemTemplate="{StaticResource SplitViewItemTemplate}"
                        ItemsSource="{x:Bind ViewModel.NavigationItems, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=OneWay}"
                        SelectionMode="Single"
                        TabIndex="1">
                        <i:Interaction.Behaviors>
                            <core:EventTriggerBehavior EventName="ItemClick">
                                <core:InvokeCommandAction Command="{x:Bind ViewModel.ItemClickCommand}"/>
                            </core:EventTriggerBehavior>
                        </i:Interaction.Behaviors>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </SplitView.Pane>
            <Frame x:Name="frame" />
        </SplitView>
    </Grid>
</Page>
