<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="RelativePanel" x:Key="ItemContainerStyle">
        <Setter Property="Margin" Value="0,5,0,5"/>
    </Style>
    <Style TargetType="Image" x:Key="ThumbnailStyle">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="80"/>
        <Setter Property="Margin" Value="0,0,10,0" />
    </Style>
    <Style TargetType="TextBlock" x:Key="ItemTitleStyle">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="ItemCaptionStyle">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiLight"/>
        <Setter Property="FontStyle" Value="Italic"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="ItemSubTitleStyle">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiLight"/>
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="TextWrapping" Value="WrapWholeWords" />
    </Style>
    <Style TargetType="TextBlock" x:Key="ItemContentStyle">
        <Setter Property="TextWrapping" Value="WrapWholeWords" />
    </Style>
</ResourceDictionary>
