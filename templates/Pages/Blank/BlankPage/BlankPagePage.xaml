<Page
    x:Class="ItemNamespace.BlankPage.BlankPagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Thickness x:Key="ContainerMargin">24,12</Thickness>
    </Page.Resources>

  <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel Margin="{StaticResource ContainerMargin}">
      <TextBlock x:Uid="BlankPage_Title" Style="{ThemeResource HeaderTextBlockStyle}"/>
    </StackPanel>
  </Grid>  
</Page>