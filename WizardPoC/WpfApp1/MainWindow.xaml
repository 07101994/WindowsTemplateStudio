<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Windows Template Studio - http://aka.ms/Wts"
        Height="800px" Width="1300px" 
        SnapsToDevicePixels="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Image Source="vsCapture.png" Grid.ColumnSpan="3" Grid.RowSpan="3" Stretch="None" />
        <Grid Name="Top" Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel Margin="10, 0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock FontFamily="Segoe UI Symbol" Text="" FontSize="16" Margin="0, 0, 10, 0" VerticalAlignment="Center" />
                <TextBlock FontSize="30">Select your options and generate</TextBlock>
            </StackPanel>
        </Grid>
        <Grid Name="Bottom" Grid.Row="2" Grid.ColumnSpan="2" Background="#f1f1f1" >
            <Grid Margin="10, 0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock>Wizard: 0.4.17086.3</TextBlock>
                    <TextBlock>Tempalte: 0.4.17090.2</TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Padding="5" Width="75" Margin="10, 0">Cancel</Button>
                    <Button Padding="5" Width="75">Generate</Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Name="MiddleLeft" Grid.Row="1" Grid.Column="0" Background="White" Opacity="1">
            <GroupBox Padding="10" Header="Foo (X) [ I NEED CUSTOM STYLE ]">
                <WrapPanel>
                    <local:SingletonWithBorder />
                    <local:SingletonWithBorder />
                    <local:SingletonWithBorder />
                    <local:SingletonWithBorder />
                    <local:SingletonWithBorder />
                    <local:SingletonWithBorder />
                </WrapPanel>
            </GroupBox>
        </Grid>
        <Grid Name="MiddleRight" Grid.Row="1" Grid.Column="1"  Background="White">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Margin="10">
                <TextBlock TextWrapping="Wrap">By continuing, you agree to the licenses in the licensing section for the generated project. By continuing, you agree to those licenses.</TextBlock>
            </Grid>
            <StackPanel Margin="10, 0" Grid.Row="0">
                <TextBlock Foreground="#3399ff" FontSize="16">Summary</TextBlock>
                <Expander Header="Project Style" FontSize="16">
                    <Grid>
                        
                    </Grid>
                </Expander>
                <Expander Header="Framework" FontSize="16">
                    <Grid>

                    </Grid>
                </Expander>
                <Expander Header="Pages" FontSize="16">
                    <Grid>

                    </Grid>
                </Expander>
                <Expander Header="Features" FontSize="16">
                    <Grid>

                    </Grid>
                </Expander>
                <Expander Header="Licenses" FontSize="16">
                    <Grid>

                    </Grid>
                </Expander>

            </StackPanel>
            
        </Grid>
    </Grid>
</Window>
