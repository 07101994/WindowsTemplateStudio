<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Windows Template Studio - http://aka.ms/Wts"
        Width="800px" 
        SnapsToDevicePixels="True">
    <Window.Resources>
        <ControlTemplate x:Key="GroupBoxControlTemplate1" TargetType="{x:Type GroupBox}">
            <Grid SnapsToDevicePixels="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid x:Name="Header" Grid.Column="0" Grid.Row="0">
                    <ContentPresenter ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" ContentStringFormat="{TemplateBinding HeaderStringFormat}" ContentSource="Header" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                </Grid>
                <Rectangle Fill="#d7d7d7" Grid.Column="1" Grid.Row="0" Height="2" Margin="5, 0, 5, -3" />
                <ContentPresenter 
                    Grid.Column="0"
                    Grid.ColumnSpan="2" 
                    Grid.Row="1"
                    Margin="{TemplateBinding Padding}"
                    ContentTemplate="{TemplateBinding ContentTemplate}" 
                    Content="{TemplateBinding Content}" 
                    ContentStringFormat="{TemplateBinding ContentStringFormat}" 
                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <!--<Image Source="vsCapture.png" Grid.ColumnSpan="3" Grid.RowSpan="3" Stretch="None" />-->
        <Grid Name="TopItem" Grid.Row="0" Grid.ColumnSpan="2" Background="#3399ff">
            <StackPanel Margin="10, 0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Foreground="White" FontFamily="Segoe UI Symbol" Text="" FontSize="16" Margin="0, 0, 10, 0" VerticalAlignment="Center" />
                <TextBlock Foreground="White" FontSize="30">Select your options and generate</TextBlock>
            </StackPanel>
        </Grid>
        <Grid Name="Bottom" Grid.Row="2" Grid.ColumnSpan="2" Background="#f1f1f1" >
            <Grid Margin="10, 0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock>Wizard: 0.4.17086.3</TextBlock>
                    <TextBlock>Tempalte: 0.4.17090.2</TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Padding="5" Width="75" Margin="10, 0">Cancel</Button>
                    <Button Padding="5" Width="75">Generate</Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Name="MiddleLeft" Grid.Row="1" Grid.Column="0" Background="White" Opacity="1">
            <ScrollViewer Margin="10, 10, 0, 10" Grid.Row="0">
                <GroupBox Padding="0, 10" Header="Foo (X) [ I NEED CUSTOM STYLE ]" Template="{DynamicResource GroupBoxControlTemplate1}">
                    <WrapPanel>
                        <local:SingletonWithBorder />
                        <local:MultipleAddItemWithBorder />
                        <local:SingletonWithBorder />
                        <local:MultipleAddItemWithBorder />
                        <local:SingletonWithBorder />
                        <local:SingletonWithBorder />
                        <local:MultipleAddItemWithBorder />
                        <local:MultipleAddItemWithBorder />
                    </WrapPanel>
                </GroupBox>
            </ScrollViewer>
        </Grid>
        <Grid Name="MiddleRight" Grid.Row="1" Grid.Column="1"  Background="White">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" Margin="10">
                <TextBlock TextWrapping="Wrap">By continuing, you agree to the licenses in the licensing section for the generated project. By continuing, you agree to those licenses.</TextBlock>
            </Grid>
            <ScrollViewer Margin="10, 10, 0, 10" Grid.Row="0">
                <StackPanel >
                    <TextBlock Foreground="#3399ff" FontSize="16">Summary</TextBlock>
                    <Expander Header="Project Style" FontSize="16" IsExpanded="True">
                        <StackPanel Margin="25, 0, 0, 0">
                            <TextBlock>Item 1</TextBlock>
                        </StackPanel>
                    </Expander>
                    <Expander Header="Framework" FontSize="16" IsExpanded="True">
                        <StackPanel Margin="25, 0, 0, 0">
                            <TextBlock>Item 2</TextBlock>
                        </StackPanel>
                    </Expander>
                    <Expander Header="Pages" FontSize="16" IsExpanded="True">
                        <Grid>
                            <StackPanel Margin="25, 0, 0, 0">
                                <TextBlock>Item 1</TextBlock>
                                <TextBlock>Item 1</TextBlock>
                                <TextBlock>Item 1</TextBlock>
                                <TextBlock>Item 1</TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander>
                    <Expander Header="Features" FontSize="16" IsExpanded="True">
                        <Grid>
                            <StackPanel Margin="25, 0, 0, 0">
                                <TextBlock>Item 1</TextBlock>
                                <TextBlock>Item 1</TextBlock>
                                <TextBlock>Item 1</TextBlock>
                                <TextBlock>Item 1</TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander>
                    <Expander Header="Licenses" FontSize="16" IsExpanded="True">
                        <Grid>
                            <StackPanel Margin="25, 0, 0, 0">
                                <TextBlock>Item 1</TextBlock>
                                <TextBlock>Item 1</TextBlock>
                                <TextBlock>Item 1</TextBlock>
                                <TextBlock>Item 1</TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
