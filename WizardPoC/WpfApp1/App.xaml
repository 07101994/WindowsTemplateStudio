<Application x:Class="WpfApp1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:WpfApp1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="darkText" Color="#555555"/>
        <SolidColorBrush x:Key="titleTextBrush" Color="#222222" />
        <SolidColorBrush x:Key="errorBrush" Color="Red" />
        <SolidColorBrush x:Key="lightGrayBrush" Color="#f1f1f1" />

        <SolidColorBrush x:Key="normalBorderBrush" Color="#c6c6c6" />
        <SolidColorBrush x:Key="highlightBlueBrush" Color="#3399ff" />
        
        <sys:Double x:Key="TitleFontSize">16</sys:Double>
        <sys:Double x:Key="MediumFontSize">10</sys:Double>
        <sys:Double x:Key="SmallFontSize">8</sys:Double>

        <Style x:Key="WindowsTemplateStudioVersion" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
            <Setter Property="Foreground" Value="{StaticResource darkText}" />
        </Style>
        
        <Style x:Key="SummaryLicenseAgreement" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
            <Setter Property="Foreground" Value="{StaticResource darkText}" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="SummaryTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource TitleFontSize}" />
            <Setter Property="Foreground" Value="{StaticResource highlightBlueBrush}" />
        </Style>
        <Style x:Key="Expanders" TargetType="Expander">
            <Setter Property="Foreground" Value="{StaticResource titleTextBrush}" />
            <Setter Property="IsExpanded" Value="True" />
            <Setter Property="FontSize" Value="{StaticResource TitleFontSize}" />
            <Setter Property="Template" Value="{DynamicResource ExpanderControlTemplate1}" />
        </Style>
        
        <Style x:Key="ExpanderStackPanel" TargetType="StackPanel">
            <Setter Property="Margin" Value="25, 0, 0, 0" />
        </Style>
        
        <Style x:Key="SummaryTextBlocks" TargetType="TextBlock">
            <Setter Property="Margin" Value="0, 0, 0, 2" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{StaticResource darkText}" />
        </Style>
        
        <Style x:Key="SummaryTextBlocksMadeBy" TargetType="TextBlock">
            <Setter Property="Margin" Value="20, 0" />
            <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        </Style>

        <Style x:Key="SummaryTextSymbol" TargetType="Run">
            <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
        </Style>

        <Style x:Key="SummaryTextSymbolError" TargetType="Run" BasedOn="{StaticResource SummaryTextSymbol}">
            <Setter Property="Foreground" Value="{StaticResource errorBrush}" />
        </Style>

        <!-- Add on singleton and multiple body text -->
        <Style x:Key="AddOnItemsTitleText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{StaticResource titleTextBrush}" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
        </Style>
        <Style x:Key="AddOnItemsBodyText" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="WrapWithOverflow" />
            <Setter Property="Foreground" Value="{StaticResource darkText}" />
        </Style>

        <!-- Add on singleton and multiple borders -->
        <Style x:Key="AddOnItemsBorderBase" TargetType="Border">
            <Setter Property="Height" Value="80" />
            <Setter Property="MaxWidth" Value="400" />
            <Setter Property="BorderThickness" Value="5,1,1,1" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Margin" Value="0, 0, 10, 10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Opacity="0.2" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="AddOnItemsBorderHighlighted" TargetType="Border" BasedOn="{StaticResource AddOnItemsBorderBase}">
            <Setter Property="BorderBrush" Value="{StaticResource highlightBlueBrush}" />
        </Style>
        <Style x:Key="AddOnItemsBorderNormal" TargetType="Border" BasedOn="{StaticResource AddOnItemsBorderBase}">
            <Setter Property="BorderBrush" Value="{StaticResource normalBorderBrush}" />
        </Style>


        <Style TargetType="GroupBox">
            <Setter Property="Template" Value="{DynamicResource GroupBoxControlTemplate1}" />
            <Setter Property="Padding" Value="0, 10" />
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="{StaticResource darkText}" FontWeight="Bold"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
    <!--<Setter Property="" Value="" />-->
</Application>
