<UserControl 
    x:Class="WpfApp1.MultipleAddItemWithBorder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d">
    <!-- 
        If zero items: c6c6c6 
        More than 1 item: 3399ff 
   
        Per item added, if default name used, increase item #, example: BackgroundTask1 added, Text should become BackgroundTask2
    
        When Added, maybe "quick flash" of background to show it was added?
    -->
    <Border 
        Margin="0, 0, 10, 10" 
        Height="80" 
        MaxWidth="400" 
        BorderBrush="#3399ff" 
        BorderThickness="5,1,1,1" 
        Background="White">
        <!-- 
        TODO:
        on click, this highlight, currently it is in a "highlight state"
        we need a multi-item varient with the "add hover concept"
-->
        <Border.Effect>
            <DropShadowEffect Opacity="0.2" />
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition />
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.RowSpan="2" FontFamily="Segoe UI Symbol" Text="" FontSize="36" HorizontalAlignment="Center" />
            
            <TextBlock Grid.Row="0" Grid.Column="1" FontWeight="Bold" VerticalAlignment="Bottom">Lorem ipsum Multiples</TextBlock>
            <!-- margin bottom here is so checkbox and title line up-->
            <Grid Grid.Row="1" Grid.Column="1" >
                <TextBlock TextWrapping="WrapWithOverflow">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur magna tellus, malesuada laoreet convallis sit amet, congue ut lectus.</TextBlock>
            </Grid>
            <Grid 
                Grid.Column="1" Grid.ColumnSpan="2" 
                Grid.Row="2"
                Margin="0, 5, 5, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0">
                    LoremIpsum1
                </TextBox>
                <Button Margin="5, 0, 0, 0"
                    Grid.Column="1">
                    Add
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
